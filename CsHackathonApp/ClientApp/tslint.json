{
  "extends": ["tslint-config-airbnb"],
  "rules": {
    "import-name": [
      true,
      {
        "mobxReactDevTools": "DevTools"
      }
    ],
    "max-line-length": [true, 300],
    "ter-indent": [
      true,
      2,
      {
        "SwitchCase": 1
      }
    ],
    "trailing-comma": false
  },
  "linterOptions": {
    "exclude": [
      "src/registerServiceWorker.ts",
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  }
}
